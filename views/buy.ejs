<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css" />
    <script src="https://unpkg.com/vue@3"></script>
    <title>BKStore learning book</title>
</head>
<body>
    <div id="app">
        <form action="/logout?_method=DELETE" method="post">
            <a href="/"><img :src="icon" class="img02"></a>
            <a href="/"><img :src="Book" class="imgBook" style="width:3.5%"></a>
            <a href="/buy"><img :src="shopping" class="img03" align="right" style="width:2%"></a>
            <button type="submit" class="button2" style="float:right;">LOGOUT</button>
        </form>
        <div class="slider">
            <div class="slides">
                <!---radio buttons-->
                <input type="radio" name="radio-btn" id="radio1">
                <input type="radio" name="radio-btn" id="radio2">
                <!--Slide-->
                <div class = "slide first">
                    <img :src="banner1" alt="">
                </div>
                <div class="slide">
                    <img :src="banner2" alt="">
                </div>
                <!--auto-->
                <div class="navigation-auto">
                <div class="auto-btn1"></div>
                <div class="auto-btn2"></div>
                </div>
            </div>
            <!--manual-->
            <div class="navigation-manual">
                <label for="radio1" class="manual-btn"></label>
                <label for="radio2" class="manual-btn"></label>
            </div>
        </div>
        <script type="text/javascript">
            var content =1;
            setInterval(function(){
                document.getElementById('radio' + content).checked = true;
                content++
                if(content > 2){
                    content = 1;
                }
            },5000);
        </script>
    <div class="wrapper">
        <a class="button2" href="https://github.com/Jaaame/Pro_js" target="_back">
            <div class="icon"><img :src="githubicon"></div>
            <span>GitHub</span>
        </a>
    </div>
    </div>
    <script src = "main.js"></script>
    <script>
        const mountedApp = app.mount('#app')
    </script>
</body>
</html>